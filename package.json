    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/node": "^14.14.11",
    "eslint": "^7.15.0",
    "husky": "^4.3.5",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "prod": "tsc",
    "start:dev": "ts-node-dev --respawn src/index.ts",
